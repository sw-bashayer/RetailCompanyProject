@model IEnumerable<RetailCompanyProject.Models.Laptop>
@{
    ViewData["Title"] = "Laptops List Page";
}

<div class="text-center">
    <h4 class="h4">Welcome To The Laptops Store</h4>

<div class="container pt-3">

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="card">
                    <img src="@Url.Content("/images/"+ @item.ImageURL)" class="card-img-top" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            Price: @item.Price.ToString("0.00") SR ,@item.Screen, @item.Color.
                        </p>
                        <a class="btn btn-primary" asp-action="Checkout"  asp-route-id="@item.Id" >Buy</a>
                    </div>
                </div>
            </div>
        }

    </div>
   </div>
</div>
